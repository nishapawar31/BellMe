<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.PhoneLogin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="">

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:text="Hi...!!!"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22sp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="welcome aboard"
            android:textColor="#367FA5"
            android:textSize="16sp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your mobile number to continue."
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:text="Mobile number"
            android:textColor="@color/black"
            android:textSize="20sp">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/rectanglestyle"
                android:hint="IN   +91"
                android:textColorHint="#403E3E"
                android:inputType="text"
                android:padding="12dp" />

            <EditText
                android:id="@+id/editTextText3"
                android:layout_width="249dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectanglestyle"
                android:hint="Enter your mobile number..."
                android:inputType="number"
                android:layout_marginLeft="15dp"
                android:textColorHint="#403E3E"
                android:padding="12dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/Next"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectanglestyle"
            android:backgroundTint="#325288"
            android:gravity="center"
            android:text="NEXT"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>