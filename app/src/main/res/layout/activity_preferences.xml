<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreferencesActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Main">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/arrow_left"/>

            <TextView
                android:layout_width="197dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="105dp"
                android:text="Preferences"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_below="@+id/Main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:text="To deliver you the most convenient experience , We would like to know more about you."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="I am a"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/grp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:textAlignment="center"
                    android:text="@string/male"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:text="@string/female"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/others"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:text="@string/other"/>
            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="My age is between"/>


          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

              <com.google.android.material.chip.ChipGroup
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/grp2"
                  app:singleLine="true"
                  app:singleSelection="true">

              <com.google.android.material.chip.Chip
                  android:id="@+id/age1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                  style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="@string/age1"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/age2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:text="@string/age2"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/age3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:text="@string/age3"/>
          </com.google.android.material.chip.ChipGroup>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="I am"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/grp3"
                app:singleLine="true"
                app:singleSelection="true">

              <com.google.android.material.chip.Chip
                  android:id="@+id/single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAlignment="center"
                android:text="@string/single"/>

              <com.google.android.material.chip.Chip
                  android:id="@+id/engaged"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:text="@string/engaged"/>

              <com.google.android.material.chip.Chip
                  android:id="@+id/married"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:text="@string/married"/>
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="I speak"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/grp4"
                app:singleLine="true"
                app:singleSelection="true">

             <com.google.android.material.chip.Chip
                 android:id="@+id/english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAlignment="center"
                android:text="@string/lang1"/>

             <com.google.android.material.chip.Chip
                 android:id="@+id/hindi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:text="@string/lang2"/>

             <com.google.android.material.chip.Chip
                 android:id="@+id/marathi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textAlignment="center"
                 style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_marginLeft="10dp"
                android:text="@string/lang3"/>
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

        <TextView
            android:id="@+id/add"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/rectanglestyle"
            android:backgroundTint="#325288"
            android:text="Add data"/>

        <TextView
            android:id="@+id/update1"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectanglestyle"
            android:backgroundTint="#325288"
            android:text="UPDATE"/>

    </LinearLayout>

</RelativeLayout>